/* Make clicks pass-through */
#Spin
  pointer-events none

.Spin-busy, .Spin-busy a
  cursor progress

@keyframes SpinBg
  0%
    background-color #ff9932

  33%
    background-color #99f

  66%
    background-color #f00

  100%
    background-color #ff9932

#Spin .bar
  background #ff9932
  transition background-color 5s ease
  animation-name SpinBg
  animation-duration 6s
  animation-direction alternate
  animation-iteration-count infinite
  position fixed
  z-index 11000
  top 0
  left 0
  width 100%
  height 2px

/* Fancy blur effect */
#Spin .peg
  display block
  position absolute
  right 0px
  width 100px
  height 100%
  box-shadow 0 0 10px #ff9932, 0 0 5px #ff9932
  opacity 1
  transform rotate(3deg) translate(0px, -4px)

/* Remove these to get rid of the spinner */
#Spin .spinner
  display block
  position fixed
  z-index 11000
  top 12px
  right 12px

#Spin .spinner-icon
  width 18px
  height 18px
  box-sizing border-box
  border solid 2px transparent
  border-top-color #ff9932
  border-left-color #ff9932
  border-radius 50%
  animation Spin-spinner 400ms linear infinite

.Spin-custom-parent
  overflow hidden
  position relative

.Spin-custom-parent #Spin .spinner, .Spin-custom-parent #Spin .bar
  position absolute

@keyframes Spin-spinner
  0%
    transform rotate(0deg)
    border-top-color #ff9932
    border-left-color #f00

  33%
    border-top-color #99f
    border-left-color #f00

  66%
    border-top-color #f00
    border-left-color #ff9932

  100%
    transform rotate(360deg)
    border-top-color #ff9932
    border-left-color #f00
